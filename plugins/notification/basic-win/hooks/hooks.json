{
  "description": "在 Claude Code 執行結束或停止時播放提示音",
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"(New-Object System.Media.SoundPlayer '${CLAUDE_PLUGIN_ROOT}\\audios\\notification.wav').PlaySync()\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"(New-Object System.Media.SoundPlayer '${CLAUDE_PLUGIN_ROOT}\\audios\\stop.wav').PlaySync()\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
